{
	"title": "Systems Schema",
	"description": "A validation schema for systems.json",
	"type": "object",
	"required": true,
	"additionalProperties": false,
	"properties": {
		"systems": {
			"description": "A set of different systems of units in the form of a flattened tree",
			"type": "object",
			"required": true,
			"additionalProperties": false,
			"patternProperties": {
				".+": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"name": {
							"type": "string",
							"minLength": 1,
							"required": true
						},
						"inherits": {
							"type": "string",
							"minLength": 1,
							"required": false
						},
						"historical": {
							"type": "boolean",
							"required": false
						},
						"notes": {
							"type": "string",
							"required": false
						}
					}
				}
			}
		},
		"dimensions": {
			"type": "object",
			"required": true,
			"additionalProperties": false,
			"patternProperties": {
				".+": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"symbol": {
							"type": "string",
							"minLength": 1,
							"required": true
						},
						"baseUnit": {
							"type": "string",
							"minLength": 1,
							"required": true
						},
						"otherNames": {
							"type": "array",
							"required": false,
							"uniqueItems": true,
							"items": {
								"type": "string"
							}
						},
						"otherSymbols": {
							"type": "array",
							"required": false,
							"uniqueItems": true,
							"items": {
								"type": "string"
							}
						},
						"derived": {
							"type": "string",
							"required": false
						},
						"notes": {
							"type": "string",
							"required": false
						},
						"units": {
							"type": "object",
							"required": true,
							"additionalProperties": false,
							"patternProperties": {
								".+": {
									"type": "object",
									"required": true,
									"additionalProperties": false,
									"properties": {
										"name": {
											"type": "string",
											"minLength": 1,
											"required": true,
											"description": "required needs to be set to true!"
										},
										"plural": {
											"type": "string",
											"minLength": 1,
											"required": false
										},
										"otherNames": {
											"type": "array",
											"required": false,
											"uniqueItems": true,
											"items": {
												"type": "string"
											}
										},
										"symbol": {
											"type": "string",
											"minLength": 1,
											"required": true
										},
										"otherSymbols": {
											"type": "array",
											"required": false,
											"uniqueItems": true,
											"items": {
												"type": "string"
											}
										},
										"symbolFirst": {
											"type": "boolean",
											"required": false,
											"description": "determines if the symbol should appear before the value. Defaults to false."
										},
										"type": {
											"type": "string",
											"required": true,
											"enum": ["customary", "si", "binary"],
											"description": "range, fractional, whole may be added to enum later..."
										},
										"systems": {
											"type": "array",
											"required": true,
											"uniqueItems": true,
											"description": "required needs to be set to true!",
											"items": {
												"type": "string"
											}
										},
										"excludedSystems": {
											"type": "array",
											"required": false,
											"uniqueItems": true,
											"items": {
												"type": "string"
											}
										},
										"multiplier": {
											"type": "number",
											"required": false
										},
										"offset": {
											"type": "number",
											"required": false
										},
										"estimation": {
											"type": "boolean",
											"required": false
										},
										"rare": {
											"type": "boolean",
											"required": false
										},
										"acceptedPrefixes": {
											"type": "array",
											"required": false,
											"uniqueItems": true,
											"items": {
												"type": "string"
											}
										},
										"excludedPrefixes": {
											"type": "array",
											"required": false,
											"uniqueItems": true,
											"items": {
												"type": "string"
											}
										},
										"prefixName": {
											"type": "string",
											"required": false
										},
										"prefixFreeName": {
											"type": "string",
											"required": false
										},
										"notes": {
											"type": "string",
											"required": false
										}
									}
								}
							}
						}
					}
				}
			}
		},
		"prefixes": {
			"type": "object",
			"required": true,
			"additionalProperties": false,
			"patternProperties": {
				".+": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"symbol": {
							"type": "string",
							"required": true
						},
						"type": {
							"type": "string",
							"enum": ["si", "siBinary", "siUnofficial"],
							"required": true
						},
						"base": {
							"type": "number",
							"required": false
						},
						"power": {
							"type": "number",
							"required": false
						},
						"multiplier": {
							"type": "number",
							"required": false
						},
						"rare": {
							"type": "boolean",
							"required": false
						},
						"notes": {
							"type": "string",
							"required": false
						}
					}
				}
			}
		}
	}
}